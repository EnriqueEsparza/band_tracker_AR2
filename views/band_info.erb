<h1><%= @band.name() %></h1>

<h3>Select all venues with this band:</h3>

<% if @venues.any?() %>
<form action="/bands/<%= @band.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <% @venues.each() do |venue| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" id="<%= venue.id() %>" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.location() %>
    </label>
  </div>
  <% end %>

  <button type="submit">Add venues</button>
</form>
<% end %>


<% if @band.venues().any?() %>
<h3>Here are all the venues with this band:</h3>

<ul>
  <% @band.venues().each() do |venue| %>
  <li><%= venue.location() %></li>
  <% end %>
</ul>
<% else %>
<p>There are no venues yet!</p>
<% end %>
